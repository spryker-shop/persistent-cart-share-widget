{% extends model('component') %}

{% define config = {
    name: 'url-mask-generator',
    tag: 'url-mask-generator',
} %}

{% define data = {
    group: required,
    label: required,
} %}

{% define attributes = {
    idQuote: required,
    shareOptionGroup: required,
} %}

{% block body %}
    {% include molecule('ajax-provider') with {
        class: config.jsName ~ '__provider-' ~ attributes.shareOptionGroup,
        attributes: {
            method: 'POST',
            url: path('cart/create-link', { idQuote:attributes.idQuote, shareOptionGroup: attributes.shareOptionGroup, }),
        }
    } only %}

    {% include molecule('ajax-loader') with {
        modifiers: ['big'],
        attributes: {
            'provider-selector': '.' ~ config.jsName ~ '__provider-' ~ attributes.shareOptionGroup,
        }
    } only %}

    {% include molecule('ajax-renderer') with {
        attributes: {
            'provider-selector': '.' ~ config.jsName ~ '__provider-' ~ attributes.shareOptionGroup,
            'target-selector': '.' ~ config.jsName ~ '__actions-' ~ attributes.shareOptionGroup,
        }
    } only %}

    {% include molecule('toggler-radio') with {
        class: config.jsName ~ '__trigger-' ~ attributes.shareOptionGroup,
        data: {
            label: data.label,
        },
        attributes: {
            checked: false,
            name: data.group,
            'target-selector': '.' ~ config.jsName ~ '__actions-' ~ attributes.shareOptionGroup,
            'class-to-toggle': 'is-hidden',
        }
    } only %}

    <div class="{{ config.jsName }}__actions-{{ attributes.shareOptionGroup }}"></div>
{% endblock %}
